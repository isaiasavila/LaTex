\begin{frame}
  \frametitle{Esse é o título do quadro.}
  \framesubtitle{Esse é o subtítulo do quadro. Sobreposições de conteúdos Beamer - Uncover - usando transparência}
    \uncover<1>{Vamos resolver uma equação do segundo grau:
    $$ax^2 + bx + c = 0$$}
    \uncover<2>{Primeiro identifique os coeficientes $a$, $b$ e $c$.}

    \uncover<3>{Em seguida, calcule o valor de:
    $$\Delta = b^2 - 4ac$$}

    Calcule a primeira raiz:
    $$x 1 = \frac{-b + \sqrt{\Delta}}{2a}$$ \pause

    Calcule a segunda raiz:
    $$x 2 = \frac{-b - \sqrt{\Delta}}{2a}$$
\end{frame}

\begin{frame}
  \frametitle{Esse é o título do quadro.}
  \framesubtitle{Esse é o subtítulo do quadro. Sobreposições de conteúdos Beamer - Uncover - usando transparência parcial}
    \uncover<1-3,5>{Vamos resolver uma equação do segundo grau:
    $$ax^2 + bx + c = 0$$}
    \uncover<2->{Primeiro identifique os coeficientes $a$, $b$ e $c$.}

    \uncover<3>{Em seguida, calcule o valor de:
    $$\Delta = b^2 - 4ac$$}

    \uncover<4->{Calcule a primeira raiz:
    $$x 1 = \frac{-b + \sqrt{\Delta}}{2a}$$ \pause}

    \uncover<5->{Calcule a segunda raiz:
    $$x 2 = \frac{-b - \sqrt{\Delta}}{2a}$$}
\end{frame}

