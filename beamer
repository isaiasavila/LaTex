\begin{frame}
  \frametitle{Esse é o título do quadro.}
  \framesubtitle{Esse é o subtítulo do quadro. Sobreposições de conteúdos Beamer - Itemize, frase a frase}
    \begin{itemize}

        \item<1- | alert@1> Vamos resolver uma equação do segundo grau:
        $$ax^2 + bx + c = 0$$

        \item<2- | alert@2> Primeiro identifique os coeficientes $a$, $b$ e $c$.
    
        \item<3- | alert@3> Em seguida, calcule o valor de:
        $$\Delta = b^2 - 4ac$$
    
        \item<4- | alert@4> Calcule a primeira raiz:
        $$x 1 = \frac{-b + \sqrt{\Delta}}{2a}$$ \pause
    
        \item<5- | alert@5> Calcule a segunda raiz:
        $$x 2 = \frac{-b - \sqrt{\Delta}}{2a}$$
    \end{itemize}
\end{frame}

\begin{frame}
  \frametitle{Esse é o título do quadro.}
  \framesubtitle{Esse é o subtítulo do quadro. Sobreposições de conteúdos Beamer - Itemize, padronizado}
    \begin{itemize}[<+- | alert@+>]
        \item posso usar os modificadores usados acima: alert, only, uncover e visible

        \item Vamos resolver uma equação do segundo grau:
        $$ax^2 + bx + c = 0$$

        \item Primeiro identifique os coeficientes $a$, $b$ e $c$.
    
        \item Em seguida, calcule o valor de:
        $$\Delta = b^2 - 4ac$$
    
        \item Calcule a primeira raiz:
        $$x 1 = \frac{-b + \sqrt{\Delta}}{2a}$$ \pause
    
        \item Calcule a segunda raiz:
        $$x 2 = \frac{-b - \sqrt{\Delta}}{2a}$$
    \end{itemize}
\end{frame}

